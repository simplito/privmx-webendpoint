{
  "compilerOptions": {
    "sourceRoot": "src",
    "outDir": "dist",
    "target": "ES5",
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "stripInternal": true,
    "strict": true,
    "sourceMap": true
  },
  "exclude": [
    "public","node_modules"
  ],
  "include": ["src/**/*.ts"],
}